{% extends "base.twig" %}

{% block title %}Registro{% endblock %}

{% block body %}

<div class="container login">
    <div class="login-header">
      <a href="/" class="btn btn-danger btn-default"><span class="glyphicon glyphicon-remove"></span> Cancelar</a>
      <h4><span class="glyphicon glyphicon glyphicon-heart"></span> Registro</h4>
    </div>
    <div class="login-body">
        
        {{ request.messages('danger') }}
        
        <form role="form" action="/register" method="post">
        <div class="form-group">
          <label for="name"><span class="glyphicon glyphicon-user"></span> Nombre</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Introduce tu nombre" value="{{request.post('name')|trim}}">
        </div>
        <div class="form-group">
          <label for="email"><span class="glyphicon glyphicon-user"></span> Email</label>
          <input type="text" class="form-control" id="email" name="email" placeholder="Introduce tu email" value="{{request.post('email')|trim}}">
        </div>
        <div class="form-group">
          <label for="password"><span class="glyphicon glyphicon-eye-open"></span> Contraseña</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Introduce tu contraseña">
        </div>
          <button type="submit" class="btn btn-success btn-lg btn-block"><span class="glyphicon glyphicon glyphicon-send"></span> Registrar</button>
      </form>
    </div>
</div>  

{% endblock %}